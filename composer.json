{
    "name": "victor/racoin",
    "description": "Racoin est une application de vente en ligne entre particuliert",
    "type": "project",
    "require": {
        "php": "^8.2",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "illuminate/database": "^11.0",
        "php-di/php-di": "^7.0",
        "psr/http-message": "^2.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11",
        "slim/twig-view": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Controller\\": "app/Controller/",
            "App\\Model\\": "app/Model/",
            "App\\DB\\": "app/db/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    }
}
